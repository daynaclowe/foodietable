			<% if reservation.res_time != nil && reservation.res_time <= time_now.strftime('%a, %d %b %Y %H:%M:%S') && reservation.res_time >= (time_now -(10*60*6)).strftime('%a, %d %b %Y %H:%M:%S') %>
				<% space_available -= reservation.size_of_party %>
			<% end %>
		<% end %>
		<%= space_available %>
	</a>
	</li>
<% end %>
