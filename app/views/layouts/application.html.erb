<!DOCTYPE html>
<html>
<head>
  <title>Foodietable</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="js/jquery-1.9.1.min.js"></script>
<script src="js/transition.js"></script>
  <%= csrf_meta_tags %>
</head>
<div class="container">
<body>
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get g#ouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/#">FoodieTable</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/restaurants/new">Add Restaurant</a></li>
          </ul>
        </li>
      </ul>
      
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
           <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              Signed in as <%= current_user.name %>
                <span class="caret"></span>
                <ul class="dropdown-menu" role="menu">
                 <li>  <%= link_to "View Profile", foody_path(current_user) %></li>
                 <li>   <%= link_to "Edit Profile", edit_foody_path(current_user) %></li>
                
                    </a></ul>
           
           
            <li> <%= link_to "Log out", session_path("current"), :method => :delete %><li></ul>
        <% else %><li> <%= link_to "Log in", new_session_path %></li>
        <li><%= link_to "Sign Up", new_foody_path %></li><% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<%= yield %>


   
</div></div>
  </body>
</html>